{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "controllers/**/*.ts",
    "models/**/*.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts",
    "config/**/*.ts",
    "@types/**/*.ts",
    "server.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
