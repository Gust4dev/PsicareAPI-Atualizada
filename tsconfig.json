{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "src/@types"],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "src/controllers/**/*.ts",
    "src/models/**/*.ts",
    "src/routes/**/*.ts",
    "src/middleware/**/*.ts",
    "src/config/**/*.ts",
    "src/@types/**/*.ts",
    "server.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
